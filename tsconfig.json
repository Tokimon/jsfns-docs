{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["es2022"],
		"moduleResolution": "nodenext",
		"module": "NodeNext",
		"target": "ES2022",
		"noEmit": true,
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"sourceMap": false,
		"allowJs": false,
		"checkJs": false,
		"strictNullChecks": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"~scripts/*": ["./scripts/*"]
		}
	},
	"include": ["./scripts"]
}
